---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ScrollTop from '../components/ScrollTop.astro';
const { title, content } = Astro.props;
---

<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
  <link rel="stylesheet" href="/aikido/styles/base.css" />
  <link rel="stylesheet" href="/aikido/styles/components.css" />
  <link rel="stylesheet" href="/aikido/styles/navigation.css" />
  <link rel="stylesheet" href="/aikido/styles/legal.css" />
</head>
<body>
  <div class="site-wrapper">
    <Navigation />

    <main class="content">
      {content ? <div set:html={content} /> : <slot />}
    </main>

    <Footer />
  </div>

  <ScrollTop />
</body>
</html>
