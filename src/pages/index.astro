---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';
---

<BaseLayout title="Startseite">
  <section class="hero">
    <h1>Aikido<br><span>Weg der Harmonie</span></h1>
    <p>Bewegung statt Konfrontation. Verbindung statt Widerstand.</p>
    <a href="/kontakt" class="btn-primary">Probetraining</a>
  </section>

  <section class="cards">
    <Card title="Für alle geeignet" text="Unabhängig von Alter oder Erfahrung." />
    <Card title="Wanomichi Stil" text="Sanft, kreisförmig und bewusst geführt." />
    <Card title="Gemeinschaft" text="Ein Dojo ist mehr als nur ein Trainingsraum." />
  </section>
</BaseLayout>
